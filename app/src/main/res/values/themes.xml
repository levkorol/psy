<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Psy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_middle_violet</item>
        <item name="colorPrimaryVariant">@color/main_dark_violet</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/main_dark_violet</item>
        <!-- Customize your theme here. -->
    </style>

    <!--    Button-->
    <style name="ButtonBigViolet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/selector_btn_big</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--    Button-->
    <style name="ButtonBigLightViolet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/bg_light_violet</item>
        <item name="android:textColor">@color/main_dark_violet</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MenuItemProfile" parent="TextTitleQuestions">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">?colorControlNormal</item>
        <item name="background">?selectableItemBackground</item>
    </style>

    <!--    bottom_menu-->
    <style name="ButtonBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_baseline_arrow_back_24</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="TextToolBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="TextTitleQuestions">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextCount">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="EditTextAnswer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lines">4</item>
        <item name="android:background">@drawable/bg_line_big_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">start|top</item>
        <item name="android:padding">8dp</item>
        <item name="android:drawableEnd">@drawable/ic_baseline_info_24</item>
    </style>

    <style name="EditTextAnswerViolet">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lines">1</item>
        <item name="android:background">@drawable/bg_light_violet</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">start|top</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:drawableEnd">@drawable/ic_send_24</item>
    </style>


    <style name="ButtonToolBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="tabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RecyclerViewHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <color name="gray_dark">#2B2929</color>

    <!--    themes-->
    <attr name="darkColor"
        format="color"/>
    <attr name="iconsColor"/>
    <attr name="cardsColor"/>
    <attr name="buttonsColor"/>
    <attr name="bgLight"/>/>

    <style name="VioletAndWhiteTheme">
        <item name="darkColor">#381C71</item>
        <item name="bgLight">#FDFCFC</item>
        <item name="iconsColor">#381C71</item>
        <item name="cardsColor">#F9F8FF</item>
        <item name="buttonsColor">#381C71</item>
    </style>
</resources>