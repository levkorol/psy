<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Psy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/main_dark_violet</item>
        <!-- Customize your theme here. -->
    </style>

    <!--    bottom_menu-->
    <style name="ButtonBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_baseline_arrow_back_24</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="TextToolBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="ButtonToolBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="tabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RecyclerViewHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <color name="gray_dark">#2B2929</color>

    <!--    themes-->
    <attr name="darkColor"
        format="color"/>
    <attr name="iconsColor"/>
    <attr name="cardsColor"/>
    <attr name="buttonsColor"/>
    <attr name="bgLight"/>/>

    <style name="VioletAndWhiteTheme">
        <item name="darkColor">#381C71</item>
        <item name="bgLight">#FDFCFC</item>
        <item name="iconsColor">#381C71</item>
        <item name="cardsColor">#F9F8FF</item>
        <item name="buttonsColor">#381C71</item>
    </style>
</resources>