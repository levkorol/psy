        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:background="@color/gray_super_light" />

        <TextView
            android:id="@+id/psy_project"
            style="@style/MenuItemProfile"
            android:text="@string/project_psy"
            app:drawableStartCompat="@drawable/ic_hand_holding_heart" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:background="@color/gray_super_light" />

        <TextView
            android:id="@+id/mark"
            style="@style/MenuItemProfile"
            android:text="@string/mark"
            app:drawableStartCompat="@drawable/ic_heart" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:background="@color/gray_super_light" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="26dp"
            android:gravity="center"
            android:textColor="@color/gray_light"
            android:text="by Lev Dev Yan, version 1.0"
            android:textSize="12sp" />

