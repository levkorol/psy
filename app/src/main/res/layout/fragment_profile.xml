        <RelativeLayout
            android:id="@+id/premium"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_multi_gradient_radius">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:drawablePadding="16dp"
                android:gravity="center|start"
                android:text="@string/pro_better"
                android:textColor="@color/white"
                app:drawableStartCompat="@drawable/ic_crown" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/gray_super_light" />

        <TextView
            android:id="@+id/diary_emotions"
            style="@style/MenuItemProfile"
            android:text="@string/diary_emo"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_smile_wink" />

        <TextView
            android:id="@+id/statistic"
            style="@style/MenuItemProfile"
            android:text="@string/statistic"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_stats" />

        <TextView
            android:id="@+id/pin_code"
            style="@style/MenuItemProfile"
            android:text="@string/password"
            app:drawableStartCompat="@drawable/ic_lock" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:background="@color/gray_super_light"
