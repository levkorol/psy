<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fragment_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/filter_event_top_rl"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/adding_date"
            android:textColor="@color/gray_dark" />

        <ImageView
            android:id="@+id/close"
            style="@style/ButtonToolBar"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_close_24" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/pic_balloon_outline"
        android:gravity="center|start"
        android:text="@string/pro_two"
        android:textColor="@color/gray_dark" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/test"
        style="@style/ButtonBigMiddleViolet"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="26dp"
        android:text="@string/go_tests" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:drawableStart="@drawable/pic_balloon_outline"
        android:gravity="center|start"
        android:text="@string/pro_two"
        android:textColor="@color/gray_dark" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/info"
        style="@style/ButtonBigMiddleViolet"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="26dp"
        android:text="@string/for_user" />

</LinearLayout>