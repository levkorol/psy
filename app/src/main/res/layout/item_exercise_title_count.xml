<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/bg_light_violet"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/date"
        style="@style/TextDateTime"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        tools:text="12 ноября, 19:00" />

    <TextView
        android:id="@+id/field_one"
        style="@style/TextNormal"
        android:layout_marginTop="4dp"
        tools:text="text" />

    <TextView
        android:id="@+id/field_two"
        style="@style/TextNormal"
        android:layout_marginTop="4dp"
        tools:text="text" />

    <TextView
        android:id="@+id/field_three"
        style="@style/TextNormal"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="text" />

    <TextView
        android:id="@+id/date_create"
        style="@style/TextDateTime"
        android:layout_marginTop="4dp"
        android:textColor="@color/icon_color_dark_gray"
        android:textSize="10sp"
        tools:text="12 ноября, 19:00" />

    <ImageView
        android:id="@+id/image"
        android:visibility="gone"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

</LinearLayout>