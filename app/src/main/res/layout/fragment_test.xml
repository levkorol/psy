<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fragment_white"
    android:orientation="vertical"
    tools:context=".ui.profile.test.TestFragment">

    <RelativeLayout
        android:id="@+id/top_ll"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/back"
            style="@style/ButtonToolBar"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/title_toolbar"
            style="@style/TextToolBar"
            android:text="@string/go_tests" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/save"
            style="@style/ButtonToolBar"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_baseline_info_24" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/result_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            style="@style/TextTitleQuestions"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="@string/result_tests" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/child"
                style="@style/Widget.ProgressBar.Vertical.Child"
                android:layout_width="60dp"
                android:layout_height="300dp"
                android:layout_marginHorizontal="16dp"
                android:progress="30" />

            <ProgressBar
                android:id="@+id/adult"
                style="@style/Widget.ProgressBar.Vertical"
                android:layout_width="60dp"
                android:layout_height="300dp"
                android:layout_marginHorizontal="16dp"
                android:progress="50" />

            <ProgressBar
                android:id="@+id/parent"
                style="@style/Widget.ProgressBar.Vertical.Parent"
                android:layout_width="60dp"
                android:layout_height="300dp"
                android:layout_marginHorizontal="16dp"
                android:progress="30" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/count_procent_child"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:gravity="center"
                android:text="РЕ 30%"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/count_procent_adult"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:gravity="center"
                android:text="ВЗ 30%"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/count_procent_parent"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:gravity="center"
                android:text="РО 30%"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/save_progress"
            style="@style/ButtonBigMiddleViolet"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:text="@string/save_progress_in_profile" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/empty_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/pick_empty_ex" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Для оптимального функционирования личности, с точки зрения трансактного анализа, необходимо, чтобы в личности были гармонично представлены все три состояния Я. Для того, чтобы оценить, как сочетаются эти три части твоего Я, пройди тест." />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/test_begin"
            style="@style/ButtonBigMiddleViolet"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="@string/test_begin" />
    </LinearLayout>


</LinearLayout>