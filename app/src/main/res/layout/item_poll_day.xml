<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        tools:text="22 june, 19:00" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/one"
            style="@style/TextPollItem"
            tools:text="15"
            app:drawableStartCompat="@drawable/ic_moon" />

        <TextView
            android:id="@+id/two"
            style="@style/TextPollItem"
            tools:text="10"
            app:drawableStartCompat="@drawable/ic_following" />

        <TextView
            android:id="@+id/three"
            style="@style/TextPollItem"
            tools:text="15"
            app:drawableStartCompat="@drawable/ic_smile_wink" />

        <TextView
            android:id="@+id/four_"
            style="@style/TextPollItem"
            tools:text="1"
            app:drawableStartCompat="@drawable/ic_gym" />

        <TextView
            android:id="@+id/fife"
            style="@style/TextPollItem"
            tools:text="8"
            app:drawableStartCompat="@drawable/ic_glass" />

        <TextView
            android:id="@+id/six"
            style="@style/TextPollItem"
            tools:text="15"
            app:drawableStartCompat="@drawable/ic_salad" />

        <TextView
            android:id="@+id/seven"
            style="@style/TextPollItem"
            tools:text="15"
            app:drawableStartCompat="@drawable/ic_bed" />

        <TextView
            android:id="@+id/eight"
            style="@style/TextPollItem"
            tools:text="15"
            app:drawableStartCompat="@drawable/ic_hand_holding_heart" />
    </LinearLayout>

    <TextView
        android:id="@+id/comments"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="-10dp"
        style="@style/TextNormal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_super_light"/>

</LinearLayout>