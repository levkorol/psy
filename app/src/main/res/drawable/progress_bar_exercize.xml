<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="@color/main_light_bg"
                android:endColor="@color/main_light_bg"/>

        </shape>
    </item>

    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:startColor="@color/main_middle_violet"
                    android:endColor="@color/main_violet"/>
            </shape>
        </clip>
    </item>
</layer-list>